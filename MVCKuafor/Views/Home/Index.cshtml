
<style>

    .buttons {
        margin-left: 44%;
    }
</style>

@if (Session["username"] == null)
{

    <h2 style="margin-left:42.75%">KUAFÖR RANDEVU SİSTEMİ</h2>
    <p style="margin-left:45%">Randevu almak için lütfen giriş yapınız.</p>
    <button onclick="window.location.href='/login/customer'" class="buttons">Müşteri Girişi</button>
    <button onclick="window.location.href='/login/employee'">Çalışan Girişi</button>
    <button onclick="window.location.href='/register'">Müşteri Kaydı</button>

}
else
{
    if (Session["isAdmin"].ToString().Equals("0"))
    {
        <h2 style="margin-left:42.75%">KUAFÖR RANDEVU SİSTEMİ</h2>
        <p style="margin-left:38%">Kuaför Randevu Sistemine hoş geldiniz. Soldaki menüden seçiminizi yapın.</p>
    }
    else
    {
        <h2 style="margin-left:42.75%">KUAFÖR RANDEVU SİSTEMİ</h2>
        <p style="margin-left:40%">Kuaför Randevu Sistemine hoş geldiniz. Siz bir yöneticisiniz.</p>
    }
}